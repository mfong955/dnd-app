{
  "name": "dnd-app-backend",
  "version": "0.1.0",
  "description": "Backend for DnD text game app with AI agents",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/cli/test-harness.ts",
    "play": "ts-node src/cli/offline-game.ts",
    "play-ai": "ts-node src/cli/enhanced-game.ts",
    "play-simple": "ts-node src/cli/interactive-game.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "dnd",
    "ai",
    "agents",
    "game"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/dnd-app-backend"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.27.0",
    "dotenv": "^16.3.1",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@swc/core": "^1.15.3",
    "@swc/helpers": "^0.5.17",
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "babel-plugin-macros": "^3.1.0",
    "encoding": "^0.1.13",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "node-notifier": "^10.0.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "~4.9.5"
  }
}
